{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Younger0/Younger0.github.io/main/stocks_data.csv",
        "format": {
            "type": "csv"
        }
    },
    "title": {
        "text": "Regressing the S&P 500 Index Against the FTSE 100 Index",
        "subtitle": "2012 - 2021. Source: Yahoo Finance",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    "width": 350,
    "height": 300,
    "mark": {
        "type": "line",
        "color": "orangered",
        "strokeWidth": 2,
        "opacity": 1
    },
    "layer": [
        {
            "mark": {
                "type": "point",
                "filled": true
            },
            "encoding": {
                "x": {
                    "field": "^GSPC",
                    "type": "quantitative",
                    "title": "S&P500"
                },
                "y": {
                    "field": "^FTSE",
                    "type": "quantitative",
                    "title": "FTSE100"
                }
            }
        },
        {
            "mark": {
                "type": "errorband",
                "color": "firebrick"
            },
            "transform": [
                {
                    "regression": "^GSPC",
                    "on": "^FTSE"
                }
            ],
            "encoding": {
                "x": {
                    "field": "^GSPC",
                    "type": "quantitative"
                },
                "y": {
                    "field": "^FTSE",
                    "type": "quantitative",
                    "title": "FTSE100"
                }
            }
        },
        {
            "transform": [
                {
                    "regression": "^GSPC",
                    "on": "^FTSE",
                    "params": true
                },
                {
                    "calculate": "'RÂ²: '+format(datum.rSquared, '.2f')",
                    "as": "R2"
                }
            ],
            "mark": {
                "type": "text",
                "color": "firebrick",
                "x": "width",
                "align": "right",
                "y": -5
            },
            "encoding": {
                "text": {
                    "type": "nominal",
                    "field": "R2"
                }
            }
        }
    ]
}
