{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "Earthquakes in the U.S.",
    "subtitle":"January-December 2021",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
   "data": {
    "url": "https://earthquake.usgs.gov/fdsnws/event/1/query?format=csv&starttime=2021-01-01&endtime=2021-12-01&minmagnitude=5",
    "format": {"type": "csv"}
  },
  
   "transform":[
      
      {"filter": {
        "field": "mag", 
      }
        }


    ],
  
  "height": 300,
  "width": 310,
   
  "mark": {"type": "line", "point": false},
 
  "encoding": {

    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },

    "y": {
      "field": "mag",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    },

    "color": {
      "field": "mag",
      "type": "quantitative",
      "scale": {"scheme": "set1"},
      "title": "Magnitude",
      "legend": {
        "orient": "top-left", 
        "fillColor": "#FcFdFd"}
    }
}
}
