{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
      "description": "Police Crime chart",
  
      "title": {
       "text": "Crime at Buckingham Town Centre",
       "anchor": "start",
       "color": "black",
       "subtitle":"Recent crime by type of offence. Source: Police API.",
       "subtitleFontStyle":"italic",
       "subtitleFontSize":10,
       "subtitleColor":"black"
    },
   
    "data": {"url": "https://data.police.uk/api/crimes-street/all-crime?lat=50.608956&lng=-2.454880"},
  
    "transform": [
      {"calculate":"1", "as":"crime"}
    ],
  
    "width":285,
    "height":300,
      
    "mark": {
      "type": "bar", 
      "color": "#86d0bb"},
         
    "encoding": {
        
      "x": {
        "field": "category",
        "type": "nominal",
        "sort": "-y",
        "axis": {
          "title": null,
          "grid": false,
          "ticks": false,
          "labelAngle": 45
          
        }
      }
      
      "y": {
        "aggregate": "sum",
        "field": "crime", 
        "type": "quantitative"},
      
      "color": {
        "field": "category", 
        "type": "nominal",
        "scale":{"scheme":"tableau20"},
        "legend":{
          "title":null
        }
      }
    }
  }
